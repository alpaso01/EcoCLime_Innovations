<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/splashLogo"
            android:layout_width="380dp"
            android:layout_height="280dp"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="Logo EcoClime"
            android:scaleType="fitCenter"
            android:src="@drawable/logoblanco" />

        <TextView
            android:id="@+id/splashText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/marko_one"
            android:gravity="center"
            android:lineSpacingMultiplier="0.8"
            android:text="EcoClime\n App"
            android:textColor="@android:color/white"
            android:textSize="60sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="48dp">

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando..."
            android:textColor="#2196F3"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:letterSpacing="0.12" />

        <FrameLayout
            android:id="@+id/loaderContainer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/circleLoader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_loader"
                android:contentDescription="CÃ­rculo de carga"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/dotLoader"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/dot_loader"
                android:contentDescription="Punto de carga"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
