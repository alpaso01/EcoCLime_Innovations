<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:endColor="#2196F3"
                android:startColor="#64B5F6"
                android:type="radial"
                android:gradientRadius="60%"
                android:centerX="0.5"
                android:centerY="0.5" />
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>
    
    <!-- Main dot -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:endColor="#2196F3"
                android:startColor="#64B5F6"
                android:type="sweep" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Highlight -->
    <item
        android:left="10dp"
        android:right="14dp"
        android:top="10dp"
        android:bottom="14dp">
        <shape android:shape="oval">
            <solid android:color="#80FFFFFF" />
            <size
                android:width="6dp"
                android:height="6dp" />
        </shape>
    </item>
</layer-list>
