<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo base blanco -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Forma azul grande superior izquierda -->
    <item android:top="-300dp" android:left="-200dp">
        <shape android:shape="oval">
            <size android:width="800dp" android:height="800dp" />
            <solid android:color="#316ffe" />
        </shape>
    </item>

    <!-- Forma azul clara inferior derecha -->
    <item android:bottom="-150dp" android:right="-100dp">
        <shape android:shape="oval">
            <size android:width="400dp" android:height="400dp" />
            <solid android:color="#E8F0FF" />
        </shape>
    </item>

    <!-- Detalle azul claro superior derecha -->
    <item android:top="-50dp" android:right="-50dp">
        <shape android:shape="oval">
            <size android:width="200dp" android:height="200dp" />
            <solid android:color="#F5F8FF" />
        </shape>
    </item>
</layer-list> 