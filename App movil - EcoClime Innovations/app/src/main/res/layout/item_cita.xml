<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nombre y Apellidos -->
        <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Apellidos"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Teléfono -->
        <TextView
            android:id="@+id/telefonoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono: +34 123 456 789"
            android:textSize="14sp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: example@email.com"
            android:textSize="14sp"/>

        <!-- Tipo -->
        <TextView
            android:id="@+id/tipoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Consulta"
            android:textSize="14sp"/>

        <!-- Ciudad -->
        <TextView
            android:id="@+id/ciudadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciudad: Madrid"
            android:textSize="14sp"/>

        <!-- Código Postal -->
        <TextView
            android:id="@+id/codigoPostalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código Postal: 28001"
            android:textSize="14sp"/>

        <!-- Calle -->
        <TextView
            android:id="@+id/calleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calle: Calle Ejemplo"
            android:textSize="14sp"/>

        <!-- Número de casa -->
        <TextView
            android:id="@+id/numeroCasaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número: 123"
            android:textSize="14sp"/>

        <!-- Fecha y hora de la cita -->
        <TextView
            android:id="@+id/fechaHoraTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora: 2025-04-01 14:00"
            android:textSize="14sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
